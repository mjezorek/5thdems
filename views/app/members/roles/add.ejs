 <% include ../../../app/header %>
 <div id="page-wrapper" >
          <div id="page-inner">

    <h1><span class="fa fa-sign-in"></span>New Member Role</h1>
    <% if (message.length > 0) { %>
        <div class="alert alert-danger"><%= message %></div>
    <% } %>

    <form action="/membership/members/roles/add" method="post">
        <div class="form-group">
            <label>Name</label>
            <input type="text" class="form-control" name="name">
        </div>
        <div class="form-group">
            <label>E-Board Position</label>
            <select name="eboard" class="form-control">
            <option value="No" selected>No</option>
            <option value="Yes">Yes</option>
            </select>
        </div>
        <div class="form-group">
            <label>Voting Position</label>
            <select name="voting" class="form-control">
            <option value="No" selected>No</option>
            <option value="Yes">Yes</option>
            </select>
        </div>
        <button type="submit" class="btn btn-warning btn-lg">Add</button>
    </form>

    <a href="/membership/members/roles">Return to List</a>
    </div>
    </div>
 <% include ../../../app/footer %>