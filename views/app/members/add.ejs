 <% include ../../app/header %>
 <div id="page-wrapper" >
  <div id="page-inner">

    <h1><span class="fa fa-sign-in"></span>Add Member</h1>
    <% if (message.length > 0) { %>
    <div class="alert alert-danger"><%= message %></div>
    <% } %>

    <form action="/membership/members/add" class="form-horizontal" method="post">
        <div class="form-group">
            <div class="col-sm-6">
                <label for="first_name">First Name</label>
                <input type="text" class="form-control" name="first_name">
            </div>
            <div class="col-sm-6">
                <label for="last_name">Last Name</label>
                <input type="text" class="form-control" name="last_name">
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-12">
                <label>Address</label>
                <input type="text" class="form-control" id="address" name="address">
                <label>Address 2</label>

                <input type="text" class="form-control" name="address_2">
            </div>
            <div class="col-sm-6">
                <label>City</label>
                <input type="text" class="form-control" id="city" name="city">
            </div>
            <div class="col-sm-3">
                <label>State</label>
                <select name="state" class="form-control">
                    <option value="AL">Alabama</option>
                    <option value="AK">Alaska</option>
                    <option value="AZ">Arizona</option>
                    <option value="AR">Arkansas</option>
                    <option value="CA">California</option>
                    <option value="CO">Colorado</option>
                    <option value="CT">Connecticut</option>
                    <option value="DE">Delaware</option>
                    <option value="DC">District Of Columbia</option>
                    <option value="FL">Florida</option>
                    <option value="GA">Georgia</option>
                    <option value="HI">Hawaii</option>
                    <option value="ID">Idaho</option>
                    <option value="IL">Illinois</option>
                    <option value="IN">Indiana</option>
                    <option value="IA">Iowa</option>
                    <option value="KS">Kansas</option>
                    <option value="KY">Kentucky</option>
                    <option value="LA">Louisiana</option>
                    <option value="ME">Maine</option>
                    <option value="MD">Maryland</option>
                    <option value="MA">Massachusetts</option>
                    <option value="MI">Michigan</option>
                    <option value="MN">Minnesota</option>
                    <option value="MS">Mississippi</option>
                    <option value="MO">Missouri</option>
                    <option value="MT">Montana</option>
                    <option value="NE">Nebraska</option>
                    <option value="NV">Nevada</option>
                    <option value="NH">New Hampshire</option>
                    <option value="NJ">New Jersey</option>
                    <option value="NM">New Mexico</option>
                    <option value="NY">New York</option>
                    <option value="NC">North Carolina</option>
                    <option value="ND">North Dakota</option>
                    <option value="OH">Ohio</option>
                    <option value="OK">Oklahoma</option>
                    <option value="OR">Oregon</option>
                    <option value="PA">Pennsylvania</option>
                    <option value="RI">Rhode Island</option>
                    <option value="SC">South Carolina</option>
                    <option value="SD">South Dakota</option>
                    <option value="TN">Tennessee</option>
                    <option value="TX">Texas</option>
                    <option value="UT">Utah</option>
                    <option value="VT">Vermont</option>
                    <option value="VA">Virginia</option>
                    <option value="WA" selected>Washington</option>
                    <option value="WV">West Virginia</option>
                    <option value="WI">Wisconsin</option>
                    <option value="WY">Wyoming</option>
                </select>      
            </div>
            <div class="col-sm-3">
                <label>Postal Code</label>
                <input type="text" class="form-control" id="zip" name="zip">     
            </div>    
            <div class="col-sm-10">
                <label>Residential Precinct</label>
                <select name="residential_precinct" id="residential_precinct" class="form-control">
                    <option>No Precinct Selected</option>
                    <% for (var i in precinct) {%>
                    <option value="<%=precinct[i].id%>"><%=precinct[i].name%></option>
                    <%}%>
                </select>
            </div>
            <div class="col-sm-2">
                <br />
                <button type="button" class="btn btn-warning btn-sm" onclick="getPrecinct();">Get Precinct</button>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-12">
                <div id="ldwarning"></div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-6">
                <label>Email</label>
                <input type="text" class="form-control" name="email">
            </div>
            <div class="col-sm-6">
                <label>Email Newsletter</label>
                <input type="checkbox" class="form-control" value="Can Email" name="tags">
            </div>
            <div class="col-sm-6">
                <label>Home Phone</label>
                <input type="text" class="form-control" name="home_phone">
            </div>
            <div class="col-sm-6">
                <label>Mobile Phone</label>
                <input type="text" class="form-control" name="mobile_phone">
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-8">
                <label>Membership Type</label>
                <select name="membership_type" id="membership_type" class="form-control">
                    <option>No Membership Type Selected</option>
                    <% for (var i in types) {%>
                    <option value="<%=types[i].id%>"><%=types[i].name%></option>
                    <%}%>
                </select>
            </div>
            <div class="col-sm-4">
                <label>Date Paid for Membership</label>
                <input type="text" name="date_paid" id="datepicker">
            </div>
        </div>
        <a onclick="$('#family').toggle();"><h4>Additional Family Members</h4></a>
    <div id="family">
    <div class="form-group">
        <div class="col-sm-3">
            <label>First Name</label>
            <input type="text" class="form-control" name="additional_fname_1">
        </div>
        <div class="col-sm-3">
            <label>Last Name</label>
            <input type="text" class="form-control" name="additional_lname_1">
        </div>
        <div class="col-sm-3">
            <label>Email</label>
            <input type="text" class="form-control" name="additional_email_1">
        </div>
        <div class="col-sm-3">
            <label>Phone</label>
            <input type="text" class="form-control" name="additional_mobile_1">
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-3">
            <label>First Name</label>
            <input type="text" class="form-control" name="additional_fname_2">
        </div>
        <div class="col-sm-3">
            <label>Last Name</label>
            <input type="text" class="form-control" name="additional_lname_2">
        </div>
        <div class="col-sm-3">
            <label>Email</label>
            <input type="text" class="form-control" name="additional_email_2">
        </div>
        <div class="col-sm-3">
            <label>Phone</label>
            <input type="text" class="form-control" name="additional_mobile_2">
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-3">
            <label>First Name</label>
            <input type="text" class="form-control" name="additional_fname_3">
        </div>
        <div class="col-sm-3">
            <label>Last Name</label>
            <input type="text" class="form-control" name="additional_lname_3">
        </div>
        <div class="col-sm-3">
            <label>Email</label>
            <input type="text" class="form-control" name="additional_email_3">
        </div>
        <div class="col-sm-3">
            <label>Phone</label>
            <input type="text" class="form-control" name="additional_mobile_3">
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-3">
            <label>First Name</label>
            <input type="text" class="form-control" name="additional_fname_4">
        </div>
        <div class="col-sm-3">
            <label>Last Name</label>
            <input type="text" class="form-control" name="additional_lname_4">
        </div>
        <div class="col-sm-3">
            <label>Email</label>
            <input type="text" class="form-control" name="additional_email_4">
        </div>
        <div class="col-sm-3">
            <label>Phone</label>
            <input type="text" class="form-control" name="additional_mobile_4">
        </div>
    </div>
    </div>
        <div class="form-group">
            <div class="col-sm-4">
                <label>Member Interests</label>
                <select name="interests" multiple id="interests">
                    <% for (var i in interests) {%>
                    <option value="<%=interests[i].id%>">
                        <%=interests[i].name%>
                    </option>
                    <%}%>
                </select>
            </div>
            <div class="col-sm-1"></div>
            <div class="col-sm-6">
                <label>Member Roles</label>
                <select name="roles" multiple id="roles">
                    <% for (var i in roles) {%>
                    <option value="<%=roles[i].id%>" 
                        <% if (roles[i].name == "Unpaid"){%>
                        selected="selected"
                        <%}%>>
                        <%=roles[i].name%>
                    </option>
                    <%}%>
                </select>
            </div>
        </div>
        <div class="form-group">
           <div class="col-sm-9">
               <label>If PCO, what Precinct assigned?</label>
               <select name="service_precinct" id="service_precinct" class="form-control">
                <option>No Precinct Selected</option>
                <% for (var i in precinct) {%>
                <option value="<%=precinct[i].id%>"><%=precinct[i].name%></option>
                <%}%>
            </select>
        </div>
        <div class="col-sm-3">
            <br />
            <button type="button" class="btn btn-warning btn-sm" onclick="$('#service_precinct').val($('#residential_precinct').val());">Use Residential</button>
        </div>
    </div>
    
    <button type="submit" class="btn btn-warning btn-lg">Add</button>
</form>

<a href="/membership/members">Return to List</a>
</div>
</div>

<% include ../../app/footer %>