 <% include ../../app/header %>
 <div id="page-wrapper" >
          <div id="page-inner">

    <h1><span class="fa fa-sign-in"></span>New Meeting</h1>
    <% if (message.length > 0) { %>
        <div class="alert alert-danger"><%= message %></div>
    <% } %>

    <form action="/membership/meetings/add" method="post">
        <div class="form-group">
            <label>Meeting Name</label>
            <input type="text" class="form-control" name="name">
        </div>
        <div class="form-group">
            <label>Meeting Date</label>
             <div class='input-group date' >
                    <input type='text' id='datetimepicker1' class="form-control" name="date" />
                    <span class="input-group-addon">
                        <span class="glyphicon glyphicon-calendar"></span>
                    </span>
                </div>
        </div>
        <div class="form-group">
            <label>Meeting Location</label>
            <input type="text" class="form-control" name="location">
        </div>
        <div class="form-group">
            <label>Meeting Type</label>
            <select name="meeting_type"  class="form-control" >
            <option value="eboard">E-Board</option>
            <option value="general">General Meeting</option>
            <option value="committee">Committee Meeting</option>
            </select>
        </div>
        <button type="submit" class="btn btn-warning btn-lg">Add</button>
    </form>

    <a href="/membership/interests">Return to List</a>
    </div>
    </div>
 <% include ../../app/footer %>